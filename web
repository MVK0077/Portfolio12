    <script>
        // Training Hours Chart
        const ctx1 = document.getElementById('trainingHoursChart').getContext('2d');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['Q1', 'Q2', 'Q3', 'Q4'],
                datasets: [{
                    label: 'Training Hours',
                    data: [120, 150, 200, 250],
                    backgroundColor: '#ffd700'
                }]
            }
        });

        // Upskilled Employees Chart
        const ctx2 = document.getElementById('upskilledChart').getContext('2d');
        new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Sales', 'HR', 'Technical', 'Marketing'],
                datasets: [{
                    data: [50, 30, 70, 20],
                    backgroundColor: ['#ff5722', '#0078d7', '#ffeb3b', '#4caf50']
                }]
            }
        });

        // Total Trainings Chart
        const ctx3 = document.getElementById('trainingsChart').getContext('2d');
        new Chart(ctx3, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                datasets: [{
                    label: 'Trainings Conducted',
                    data: [10, 20, 15, 25, 30],
                    borderColor: '#0078d7',
                    borderWidth: 2,
                    fill: false
                }]
            }
        });
    </script>
